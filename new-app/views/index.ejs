<html>
<head>
  <title>Allset Chat</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
</head>
<body ng-app="chatApp" background="images/bg.jpg">
<div class="row">
  <div class="col-lg-9 col-lg-offset-2 bg-info" background-color="white">
    <ui-view></ui-view>

  </div>
</div>
<script type="text/ng-template" id="/home.html">

    <h1 class="display-2" style="text-align:center; padding-bottom:100px" >Hello-App</h1>

  <div class="container">
    <div class="row">
        <h2 style="padding-bottom:10px">Message</h2>
        <div ng-repeat="post in posts">
          <span style="font-size:14px; margin-left:5px;">
              {{post.msg}}
            </span>
        </div>
      </div>

  </div>

  <form ng-submit="addPost()" style="margin-top:30px;">
  <h3>Type your message</h3>
  <div class="form-group">
    <input type="text" class="form-control" placeHolder="Message"  ng-model="msg"></input>
  </div>
  <button type="submit" class="btn btn-primary">Send</button>
  </form>
</script>

</body>
</html>
